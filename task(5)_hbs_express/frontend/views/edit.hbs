{{>nav}}
<form method="post" action="/editUserPost/{{singleUser.id}}">
    <div class="form-floating m-2 mb-3 fs-6">
        <input type="text" class="form-control" name="name" placeholder="enter name" value="{{singleUser.name}}" required>
        <label for="floatingInput">name</label>
    </div>
    <div class="form-floating m-2 mb-3 fs-6">
        <input type="text" class="form-control" name="age" placeholder="enter age" value="{{singleUser.age}}" required>
        <label for="floatingInput ">age</label>
    </div>
    <div class="form-floating m-2 mb-3 fs-6">
        <input type="email" class="form-control" name="email" placeholder="enter email" value="{{singleUser.email}}" required>
        <label for="floatingInput ">email</label>
    </div>
    {{#each singleUser.address}}
    <div class="d-flex justify-content-between">
        <div class="form-floating m-2 mb-3 fs-6  "   style="min-width: 49%;">
            <input type="text" class="form-control" name="addressType" placeholder="enter addressType" value="{{addressType}}" required>
            <label for="floatingInput">addressType</label>
        </div>
        <div class="form-floating m-2 mb-3 fs-6"  style="min-width: 49%;">
            <input type="text" class="form-control" name="addressDetails" placeholder="enter addressDetails" value="{{addressDetails}}" required>
            <label for="floatingInput ">addressDetails</label>
        </div>
    </div>
    {{/each}}
    <div class="d-flex justify-content-center mt-5">
        <button  class="btn btn-warning mx-3 fs-5 mt-2">edit User</button>
    </div>

</form>
{{>footer}}