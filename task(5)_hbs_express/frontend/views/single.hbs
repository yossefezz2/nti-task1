{{>nav}}
<div>
    {{#if singleUser}}
    <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center fs-6">
            {{singleUser.id}}
            <span class="badge bg-secondary rounded-pill fs-5" style="min-width: 165px; margin: 5px 15px;">id</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            {{singleUser.name}}
            <span class="badge bg-secondary rounded-pill fs-5" style="min-width: 165px; margin: 5px 15px;">name</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            {{singleUser.email}}
            <span class="badge bg-secondary rounded-pill fs-5" style="min-width: 165px; margin: 5px 15px;">email</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            {{singleUser.age}}
            <span class="badge bg-secondary rounded-pill fs-5" style="min-width: 165px; margin: 5px 15px;">age</span>
        </li>
        {{#each singleUser.address}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            {{addressType}}
            <span class="badge bg-secondary rounded-pill fs-6" style="min-width: 165px; margin: 5px 15px; padding: 9px;">address Type</span>
        </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
            {{addressDetails}}
            <span class="badge bg-secondary rounded-pill fs-6" style="min-width: 165px; margin: 5px 15px; padding: 9px; ">address Details</span>
        </li>
        {{/each}}
    </ul>
    <div class="d-flex justify-content-center mt-5">
        <a href="/edit/{{singleUser.id}}" class="btn btn-warning mx-3 fs-5 mt-2" style="min-width: 85px;">Edit</a>
        <a href="/del/{{singleUser.id}}" class="btn btn-danger mx-3 fs-5 mt-2" style="min-width: 85px;">Delete</a>
    </div>
    {{/if}}
</div>
{{>footer}}