<form id="form-id" class="form-div">
    <div class="form-floating m-2" style="min-width: 20%;">
        <input type="text" class="form-control" name="userId" placeholder="enter id" required>
        <label for="floatingInput">Id</label>
    </div>
    <div class="form-floating  m-2" style="min-width: 20%;">
        <input type="text" class="form-control" name="userName" placeholder="enter name" required>
        <label for="floatingInput">Name</label>
    </div>
    <div class="form-floating m-2" style="min-width: 20%;">
        <input type="email" class="form-control" name="userEmail" placeholder="email" required>
        <label for="floatingInput">Email</label>
    </div>
    <div class="form-floating  m-2 ml-4" style="min-width: 20%;">
        <input type="text" class="form-control" name="userBalance" placeholder="enter userBalance" required>
        <label for="floatingInput">Balance</label>
    </div>
    <button class="btn btn-primary m-2  p-2">Register</button>
</form>
